<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/car"
    tools:context=".GetStartActivity">
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/transparent_diagonal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car \nShoping Apps"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:textSize="@dimen/h4RobotoRegular"
        android:textColor="@color/colorwhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="50dp" />
    <View
        android:id="@+id/line"
        android:layout_width="20px"
        android:layout_height="0dp"
        android:background="@color/colorwhite"
        android:layout_marginEnd="@dimen/marginContent"
        app:layout_constraintBottom_toBottomOf="@id/textview_title"
        app:layout_constraintEnd_toStartOf="@id/textview_title"
        app:layout_constraintTop_toTopOf="@id/textview_title"
        android:layout_marginRight="@dimen/marginContent" />
    <TextView
        android:id="@+id/textview_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, Welcome to Car Shoping Apps"
        android:textColor="@color/colorwhite"
        android:textSize="@dimen/body1RobotoRegular"
        android:layout_margin="@dimen/marginContent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/button_getstart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Get Start"
        android:textColor="@color/colorwhite"
        android:background="@drawable/button_ui"
        android:textAllCaps="false"
        android:layout_margin="@dimen/marginContent"
        app:layout_constraintBottom_toTopOf="@id/textview_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>