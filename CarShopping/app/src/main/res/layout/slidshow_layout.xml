<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/imgSlide"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:scaleType="fitXY"
        android:src="@drawable/imageprofile"
       />
    <TextView
        android:id="@+id/mileage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:text="Mileage 4.875"
        android:textColor="@color/colorBlack"
        android:textSize="14dp"
        android:layout_alignBottom="@+id/imgSlide"
        android:layout_alignParentRight="true"
       />
    <ImageView
        android:id="@+id/Favorite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_favorite_24"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/imgSlide"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        />
    <ImageView
        android:id="@+id/redheart"
        android:layout_width="75dp"
        android:layout_height="79dp"
        android:layout_alignBottom="@+id/imgSlide"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_red_favorite_24" />
    <TextView
        android:id="@+id/carprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$770K"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:layout_below="@+id/Price"
        android:layout_alignLeft="@+id/Price"
        android:layout_alignParentRight="true"
       />
    <TextView
        android:id="@+id/Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="40dp"
        android:text="Price"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/tvfBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text="2018 Audi"
        android:textColor="@color/colorBlack"
        android:textSize="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
      />
    <TextView
        android:id="@+id/carName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Q3"
        android:textColor="@color/colorBlack"
        android:textSize="16dp"
        android:elevation="4dp"
        android:layout_below="@+id/tvfBrand"
        android:layout_alignLeft="@+id/tvfBrand"
        />
</RelativeLayout>