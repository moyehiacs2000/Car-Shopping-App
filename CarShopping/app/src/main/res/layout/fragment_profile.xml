<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profileFragment">
    <ImageView
        android:id="@+id/imgclose"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/close1"
        app:layout_constraintTop_toTopOf="@+id/rlv"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="10dp"
        android:layout_marginRight="-40dp"
        app:layout_constraintBottom_toBottomOf="@+id/rlv"
        android:layout_marginBottom="410dp"
        android:elevation="16dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:id="@+id/rlv"
        android:elevation="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.github.chrisbanes.photoview.PhotoView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fullphoto"
            android:src="@drawable/imageprofile"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/overbox"
        android:background="@drawable/overbox"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_camera"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic__camera_24"
            android:elevation="6dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toLeftOf="@+id/circleimageview"
            app:layout_constraintBottom_toBottomOf="@+id/circleimageview"/>
        <ImageView
            android:id="@+id/image_header"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:src="@drawable/cover"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/transparent_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/image_header"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleimageview"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/person"
            app:civ_border_color="@color/colorwhite"
            app:civ_border_width="5dp"
            android:layout_margin="@dimen/marginContent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_header"
            app:layout_constraintBottom_toBottomOf="@+id/image_header"/>
        <TextView
            android:id="@+id/textview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin8dp"
            android:text="Mohamed Yehia"
            android:textStyle="bold"
            android:textSize="@dimen/body1RobotoRegular"
            android:textColor="@color/colorwhite"
            app:layout_constraintStart_toEndOf="@+id/circleimageview"
            app:layout_constraintBottom_toBottomOf="@id/image_header"/>
        <TextView
            android:id="@+id/textview_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin8dp"
            android:text="MohamedYehia@gmail.com"
            android:textStyle="bold"
            android:textSize="@dimen/body2RobotoRegular"
            app:layout_constraintStart_toEndOf="@+id/circleimageview"
            app:layout_constraintTop_toBottomOf="@id/image_header"/>
        <TextView
            android:id="@+id/textview_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marginContent"
            android:text="Information"
            android:textStyle="bold"
            android:textSize="@dimen/h6RobotoMedium"
            app:layout_constraintTop_toBottomOf="@id/circleimageview"
            app:layout_constraintStart_toStartOf="parent"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marginContent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_information"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

