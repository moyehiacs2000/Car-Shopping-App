<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imageview_item_profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/imageprofile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/textview_item_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginContent"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Account"
        android:textSize="@dimen/body1RobotoRegular"
        app:layout_constraintBottom_toBottomOf="@+id/imageview_item_profile"
        app:layout_constraintStart_toEndOf="@+id/imageview_item_profile"
        app:layout_constraintTop_toTopOf="@+id/imageview_item_profile"
     />
    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_margin="@dimen/marginContent"
        android:background="@color/colorGgray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageview_item_profile"/>


</androidx.constraintlayout.widget.ConstraintLayout>
